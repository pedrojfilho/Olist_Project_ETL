import sys
from awsglue.utils import getResolvedOptions
from pyspark.context import SparkContext
from awsglue.context import GlueContext
from awsglue.job import Job
from pyspark.sql import functions as F

args = getResolvedOptions(sys.argv, ['JOB_NAME'])

sc = SparkContext()
glueContext = GlueContext(sc)
spark = glueContext.spark_session
job = Job(glueContext)
job.init(args['JOB_NAME'], args)

bronze_path = "s3://pedro-datalake-project/bronze/payments/"
df = spark.read.parquet(bronze_path)

df_silver = (
    df
    .withColumn("payment_type", F.lower(F.trim("payment_type")))
    .withColumn("payment_installments", F.col("payment_installments").cast("int"))
    .withColumn("payment_value", F.col("payment_value").cast("double"))
    .filter(F.col("order_id").isNotNull())
)

df_silver = df_silver.dropDuplicates(["order_id", "payment_sequential"])

df_silver = (
    df_silver
    .withColumn("audit_timestamp", F.current_timestamp())
    .select(
        "order_id",
        "payment_sequential",
        "payment_type",
        "payment_installments",
        "payment_value",
        "audit_timestamp"
    )
)

silver_path = "s3://pedro-datalake-project/silver/payments/"
df_silver.write.mode("overwrite").parquet(silver_path)

print("Silver payments written:", silver_path)
job.commit()
