import sys
from awsglue.utils import getResolvedOptions
from pyspark.context import SparkContext
from awsglue.context import GlueContext
from awsglue.job import Job
from pyspark.sql import functions as F

args = getResolvedOptions(sys.argv, ['JOB_NAME'])

sc = SparkContext()
glueContext = GlueContext(sc)
spark = glueContext.spark_session
job = Job(glueContext)
job.init(args['JOB_NAME'], args)

bronze_path = "s3://pedro-datalake-project/bronze/products/"
df = spark.read.parquet(bronze_path)

df_silver = (
    df
    .withColumn("product_category_name", F.lower("product_category_name"))
    .withColumn("audit_timestamp", F.current_timestamp())
    .select(
        "product_id",
        "product_category_name",
        "product_name_lenght",
        "product_description_lenght",
        "product_photos_qty",
        "product_weight_g",
        "product_length_cm",
        "product_height_cm",
        "product_width_cm",
        "audit_timestamp"
    )
)

silver_path = "s3://pedro-datalake-project/silver/products/"
df_silver.write.mode("overwrite").parquet(silver_path)

print("âœ” Silver products written:", silver_path)
job.commit()
