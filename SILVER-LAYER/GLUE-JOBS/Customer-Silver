import sys
from awsglue.utils import getResolvedOptions
from pyspark.context import SparkContext
from awsglue.context import GlueContext
from awsglue.job import Job
from pyspark.sql import functions as F

args = getResolvedOptions(sys.argv, ['JOB_NAME'])

sc = SparkContext()
glueContext = GlueContext(sc)
spark = glueContext.spark_session
job = Job(glueContext)
job.init(args['JOB_NAME'], args)


bronze_path = "s3://pedro-datalake-project/bronze/customers/"

df = spark.read.parquet(bronze_path)

df_silver = (
    df
    .withColumn(
        "customer_zip_code_prefix",
        F.format_string("%05d", F.col("customer_zip_code_prefix"))
    )
    .withColumn(
        "customer_city",
        F.initcap(F.trim(F.col("customer_city")))
    )
    .withColumn(
        "customer_state",
        F.upper(F.col("customer_state"))
    )
    .withColumn(
        "audit_timestamp",
        F.current_timestamp()
    )
)

df_silver = df_silver.filter(F.col("customer_id").isNotNull())

df_silver = df_silver.dropDuplicates(["customer_id"])

df_silver = df_silver.select(
    "customer_id",
    "customer_unique_id",
    "customer_zip_code_prefix",
    "customer_city",
    "customer_state",
    "audit_timestamp"
)

silver_path = "s3://pedro-datalake-project/silver/customers/"

df_silver.write.mode("overwrite").parquet(silver_path)

print("Silver customer written:", silver_path)

job.commit()
