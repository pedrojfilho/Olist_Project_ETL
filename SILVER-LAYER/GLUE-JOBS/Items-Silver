import sys
from awsglue.utils import getResolvedOptions
from pyspark.context import SparkContext
from awsglue.context import GlueContext
from awsglue.job import Job
from pyspark.sql import functions as F

args = getResolvedOptions(sys.argv, ['JOB_NAME'])

sc = SparkContext()
glueContext = GlueContext(sc)
spark = glueContext.spark_session
job = Job(glueContext)
job.init(args['JOB_NAME'], args)


bronze_path = "s3://pedro-datalake-project/bronze/items/"
df = spark.read.parquet(bronze_path)


df_silver = (
    df
    .withColumn("order_item_id", F.col("order_item_id").cast("int"))
    .withColumn("shipping_limit_date", F.to_timestamp("shipping_limit_date"))
    .withColumn("price", F.col("price").cast("double"))
    .withColumn("freight_value", F.col("freight_value").cast("double"))
    .withColumn("audit_timestamp", F.current_timestamp())
    .filter(F.col("order_id").isNotNull() &
            F.col("product_id").isNotNull() &
            F.col("seller_id").isNotNull())
)

df_silver = df_silver.select(
    "order_id", "order_item_id", "product_id", "seller_id",
    "shipping_limit_date", "price", "freight_value",
    "audit_timestamp"
)

silver_path = "s3://pedro-datalake-project/silver/items/"
df_silver.write.mode("overwrite").parquet(silver_path)

print("âœ” Silver order_items written at:", silver_path)
job.commit()
