import sys
from awsglue.utils import getResolvedOptions
from pyspark.context import SparkContext
from awsglue.context import GlueContext
from awsglue.job import Job
from pyspark.sql import functions as F

args = getResolvedOptions(sys.argv, ['JOB_NAME'])

sc = SparkContext()
glueContext = GlueContext(sc)
spark = glueContext.spark_session
job = Job(glueContext)
job.init(args['JOB_NAME'], args)


bronze_path = "s3://pedro-datalake-project/bronze/geolocation/"

df = spark.read.parquet(bronze_path)

df_silver = (
    df.withColumn(
        "geolocation_city",
        F.lower(F.trim(F.col("geolocation_city")))
    )
)

replacements = {
    "á": "a", "à": "a", "ã": "a", "â": "a",
    "é": "e", "ê": "e",
    "í": "i",
    "ó": "o", "ô": "o", "õ": "o",
    "ú": "u",
    "ç": "c"
}

for accented, plain in replacements.items():
    df_silver = df_silver.withColumn(
        "geolocation_city",
        F.regexp_replace("geolocation_city", accented, plain)
    )

df_silver = df_silver.withColumn(
    "geolocation_state",
    F.upper(F.col("geolocation_state"))
)

df_silver = df_silver.withColumn(
    "geolocation_zip_code_prefix",
    F.format_string("%05d", F.col("geolocation_zip_code_prefix"))
)

df_silver = df_silver.drop("geolocation_lat", "geolocation_lng")

df_silver = df_silver.dropDuplicates(["geolocation_zip_code_prefix"])


df_silver = df_silver.withColumn("audit_timestamp", F.current_timestamp())

silver_path = "s3://pedro-datalake-project/silver/geolocation/"

df_silver.write.mode("overwrite").parquet(silver_path)

print("Silver geolocation written at:", silver_path)

job.commit()
